<%= render 'shared/navbar' %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto bg-white shadow-xl rounded-xl overflow-hidden">
    <!-- Header Section -->
    <div class="bg-indigo-500 text-white text-center py-6">
      <h1 class="text-3xl font-bold">User Details</h1>
    </div>

    <!-- User Info Section -->
    <div class="p-6 space-y-4">
      <div class="flex items-center">
        <span class="text-gray-500 font-semibold w-1/3">Name:</span>
        <span class="text-gray-800"><%= @user.name %></span>
      </div>

      <div class="flex items-center">
        <span class="text-gray-500 font-semibold w-1/3">Email:</span>
        <span class="text-gray-800"><%= @user.email %></span>
      </div>

      <div class="flex items-center">
        <span class="text-gray-500 font-semibold w-1/3">Created At:</span>
        <span class="text-gray-800"><%= @user.created_at.strftime("%B %d, %Y") %></span>
      </div>

      <div class="flex items-center">
        <span class="text-gray-500 font-semibold w-1/3">Location:</span>
        
        <span class="text-gray-800">Lat: <%= @user.latitude %>, Lng: <%= @user.longitude %></span> 

      </div>

        <!-- Embedded Google Map using URL -->
        <div class="mt-6">
          <h2 class="text-xl font-bold mb-4">Location on Map</h2>
          <iframe
            width="100%"
            height="300"
            style="border:0"
            loading="lazy"
            allowfullscreen
            referrerpolicy="no-referrer-when-downgrade"
            src="https://www.google.com/maps?q=<%= @user.latitude %>,<%= @user.longitude %>&output=embed">
          </iframe>
        </div>
      </div>

    <!-- Button Section -->
    <div class="px-6 pb-6">
      <%= link_to 'Back to Users', users_path, class: "bg-indigo-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-indigo-600 transition duration-300" %>
    </div>
  </div>
</div>
