<%= render 'shared/navbar' %>

<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-4xl font-bold mb-4 text-gray-800"><%= @book.title %></h1>
  <div class="bg-white rounded-3xl shadow-lg p-8 max-w-lg mx-auto mt-8">
  <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= @book.title %></h2>
  
  <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Author:</span> 
    <span class="text-blue-500"><%= @book.author.name %></span>
  </p>
  
  <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Average Rating:</span> 
    <%= @book.average_rating %> ⭐
  </p>
  
  <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">ISBN:</span> <%= @book.isbn %></p>
  
  <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Language:</span> <%= @book.language_code %></p>
  
  <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Number of Pages:</span> <%= @book.num_pages %></p>
  
  <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Publication Date:</span> <%= @book.publication_date %></p>
  
  <p class="text-lg text-gray-700 mb-2"><span class="font-semibold">Publisher:</span> <%= @book.publisher %></p>

  <% if @book.publication_date.year < 2000 %>
    <p class="text-lg text-red-500 font-bold mt-4">Old Book 📚</p>
  <% else %>
    <p class="text-lg text-green-500 font-bold mt-4">New Book 📖</p>
  <% end %>

  <div class="mt-6">
    <a href="<%= books_path %>" class="text-white bg-blue-500 hover:bg-blue-600 font-bold py-2 px-4 rounded-full">Back to Books</a>
  </div>
</div>



  <h2 class="text-2xl font-semibold mt-8 mb-4">Genres</h2>
  <ul class="flex flex-wrap gap-2">
    <% @book.book_genres.each do |bg| %>
      <li class="bg-blue-100 text-blue-600 px-3 py-1 rounded-full text-sm font-medium"><%= bg.genre.name %></li>
    <% end %>
  </ul>

  <h2 class="text-2xl font-semibold mt-8 mb-4">Reviews</h2>
  <% if @book.reviews.any? %>
    <% @book.reviews.each do |review| %>
        <div class="border border-gray-200 rounded-lg p-4 mb-4 bg-white shadow-md">
        <p class="text-yellow-500 font-semibold">Rating: <%= review.rating %>/5</p>
        <p class="text-gray-800 font-bold">
          User: <%= link_to review.user.name, user_path(review.user) %>
        </p>
        <p class="text-gray-800 font-bold">
          UserId: <%= link_to review.user.id, user_path(review.user) %>
        </p>
        <p class="text-gray-700 mt-2"><%= review.content %></p>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500">No reviews available.</p>
  <% end %>
</div>